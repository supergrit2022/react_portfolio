{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true, 
        // "es2021": true, 기존 코드
        "node": true
    },
    "extends": ["eslint:recommended", "prettier"],
    
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
      },
    
    "parserOptions": {
        "ecmaVersion": "latest", // 2018은 안된다.
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "warn",
        "no-console": "off"
    }
}
